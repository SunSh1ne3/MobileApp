<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Активное состояние -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/> <!-- Синий фон -->
            <stroke android:width="1dp" android:color="@color/white"/> <!-- Белая обводка -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Неактивное состояние -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_grey"/> <!-- Серый фон -->
            <stroke android:width="1dp" android:color="@color/grey"/> <!-- Серая обводка -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>