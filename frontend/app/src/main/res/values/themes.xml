<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobileApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
       <item name="colorPrimary">@color/transparent</item>
    </style>

    <style name="TextHeader" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="TextLink" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InputFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="PageStyle" parent="Base.Theme.MobileApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CharacteristicRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Стиль для TextView с названием характеристики (слева) -->
    <style name="CharacteristicNameText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>

    </style>

    <!-- Стиль для TextView со значением характеристики (справа) -->
    <style name="CharacteristicValueText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Стиль для разделительной линии -->
    <style name="CharacteristicDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- Стиль для TextView с единицами измерения -->
    <style name="CharacteristicUnitText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0</item>
    </style>


    <style name="Style.ToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <!-- Цвет текста и иконок -->
        <item name="android:textColor">@color/toggle_button_text</item>
        <item name="iconTint">@color/toggle_button_icon</item>

        <!-- Цвет фона при выделении -->
        <item name="backgroundTint">@color/toggle_button_background</item>

        <!-- Цвет обводки -->
        <item name="strokeColor">@color/toggle_button_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>



    <style name="PaymentOptionButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertPositiveDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertNegativeDialogButton</item>
    </style>

    <style name="AlertPositiveDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AlertNegativeDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="QRDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/QRDialogAnimation</item>
    </style>

    <style name="QRDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:titleMarginTop">8dp</item>
        <item name="android:divider">@null</item>
        <item name="android:headerBackground">@color/white</item>
        <item name="android:windowTitleStyle">@style/DatePickerTitle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="DatePickerTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomTimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:padding">0dp</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:timePickerMode">clock</item>
        <item name="materialClockStyle">@style/CustomClockStyle</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomClockStyle" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="clockNumberTextColor">@color/black</item>
        <item name="clockHandColor">@color/blue</item>
        <item name="clockIcon">@drawable/ic_clock</item>

    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>